---
// COMPONENT: SIMPLE SECTION
import type { SimpleSectionProps } from "./interfaces.astro";
const { title, subtitle, background, name='' } = Astro.props as SimpleSectionProps;
---

<section id="__bx-general-section" class="scroll-snap">
    { name !== '' &&
        <div id={ name }></div>
    }
    <div class="__bixo-element">
        <div class="__bx-paragraph-centered">
            { subtitle !== '' && <h6>&mdash; {subtitle}</h6> }
            { title !== '' && <h3>{title}</h3> }
            <slot name="SectionContent" />
        </div>
    </div>
    <div class="__bixo-element back-orange back-image" style={{ backgroundImage: `url(${background})` }}>
        <div class="overlay"></div>
    </div>
</section>

<style lang="scss">
    #__bx-general-section {
        align-items: stretch;
        flex-direction: row;
        padding: unset;

        @media screen and (width < 1600px){
            flex-direction: column-reverse;
        }

        .__bx-paragraph-centered {
            color: var(--gray-bixo-color);

            @media screen and (width < 1600px){
                padding: 30px 0;
            }

            h3 {
                line-height: 4.5rem;

                @media screen and (width < 1600px){
                    line-height: 1.2;
                }
            }

            p {
                font-weight: 300;
            }

            a {
                font-size: 1.4rem;
                font-weight: 600;
            }
        }

        .__bixo-element {
            h6 {
                color: var(--orange-bixo-color);
                text-transform: uppercase;
                letter-spacing: 0.2rem;
            }
        }
    }
</style>