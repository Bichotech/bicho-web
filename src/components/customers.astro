---
import type { CustomerArrayProps } from "./interfaces.astro";
const { CustomersArray } = Astro.props as CustomerArrayProps;
---

<section class="__bixo-phrase change-menu-color scroll-snap">
    <div class="customer-logos">
        {CustomersArray.map( (value:string) => (
            <div class="logo"><img src={`/assets/images/customers/${value[0]}`} alt={value[1]} /></div>
        ))}
    </div>
</section>

<style lang="scss">
    .customer-logos {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: auto;
        justify-items: stretch;
        width: 100%;
        justify-content: space-around;

        @media screen and (width < 1000px){
            grid-template-columns: 1fr 1fr;
        }

        @media screen and (width < 530px){
            grid-template-columns: 1fr;
        }

        .logo {
            display: block;
            width: 250px;
            max-width: 100%;
            height: 250px;
            justify-self: center;

            img {
                width: 100%;
            }
        }
    }
</style>